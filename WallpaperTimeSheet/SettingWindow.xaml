<Window x:Class="WallpaperTimeSheet.SettingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WallpaperTimeSheet"
        mc:Ignorable="d"
        Title="SettingWindow" Height="450" Width="800">
    <StackPanel>

        <StackPanel Orientation="Horizontal" Margin="10 10 10 0">
            <CheckBox x:Name="RunAtStartupCheckBox" Margin="5" Click="RunAtStartupCheckBox_Click"/>
            <Label Content="Run at the startup"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="10 10 10 0">
            <Label>DEBUG: check tray color</Label>
            <TextBox x:Name="hexColor" Width="70"></TextBox>
            <Button Click="CheckTrayColor_Click">Check</Button>
        </StackPanel>

    </StackPanel>
</Window>
